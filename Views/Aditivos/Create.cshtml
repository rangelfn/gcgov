@model GCGov.Models.Aditivo

@{
    ViewData["Title"] = "Adicionar Aditivos";
}

<div class="row justify-content-center">
    <div class="col-md-12">
        <h4>Adicionar Aditivo</h4>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-md-12">
                    <label asp-for="ContratoId" class="control-label"></label>
                    <select asp-for="ContratoId" class="form-control" asp-items="@ViewBag.Contratos">
                        <option value="">Selecione um contrato</option>
                    </select>
                    <span asp-validation-for="ContratoId" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="AdtNum" class="control-label"></label>
                    <input asp-for="AdtNum" class="form-control" />
                    <span asp-validation-for="AdtNum" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="AdtData" class="control-label"></label>
                    <input asp-for="AdtData" class="form-control" type="date" />
                    <span asp-validation-for="AdtData" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-labeled btn-secondary" title="Voltar">
                        <span class="btn-label"><i class="fa-solid fa-arrow-left"></i></span>Voltar
                    </a>
                    <button type="submit" class="btn btn-labeled btn-success" title="Salvar">
                        <span class="btn-label"><i class="fa-solid fa-check"></i></span>Salvar
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
