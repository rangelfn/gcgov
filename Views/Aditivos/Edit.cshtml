@model GCGov.Models.Aditivo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Aditivo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AdtId" />
            <div class="form-group">
                <label asp-for="AdtNum" class="control-label"></label>
                <input asp-for="AdtNum" class="form-control" />
                <span asp-validation-for="AdtNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdtDesc" class="control-label"></label>
                <input asp-for="AdtDesc" class="form-control" />
                <span asp-validation-for="AdtDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdtData" class="control-label"></label>
                <input asp-for="AdtData" class="form-control" />
                <span asp-validation-for="AdtData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdtValor" class="control-label"></label>
                <input asp-for="AdtValor" class="form-control" />
                <span asp-validation-for="AdtValor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContratoId" class="control-label"></label>
                <select asp-for="ContratoId" class="form-control" asp-items="ViewBag.ContratoId"></select>
                <span asp-validation-for="ContratoId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-labeled btn-success" title="Salvar">
                <span class="btn-label"><i class="fa-solid fa-check"></i></span>Salvar
            </button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-labeled btn-secondary" title="Voltar">
        <span class="btn-label"><i class="fa-solid fa-arrow-left"></i></span>Voltar
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
