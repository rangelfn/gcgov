@model IEnumerable<GCGov.Models.Aditivo>

@{
    ViewData["Title"] = "Aditivos";
}

<h4>Listar Aditivos</h4>
<p>
    <a asp-action="Create" class="btn btn-labeled btn-primary" title="Cadastrar">
        <span class="btn-label"><i class="fa-regular fa-square-plus"></i></span>Cadastrar
    </a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th class="col-sm-2">Contrato</th>
            <th class ="col-sm-2">Número</th>
            <th class ="col-sm-3">Descrição</th>
            <th class="col-sm-2">Data</th>
            <th class="col-sm-2">Valor</th>
            <th class="col-sm-1"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
        {
            <tr>
                <td class ="col-sm-2">@(item.Contrato != null ? Html.DisplayFor(modelItem => item.Contrato.Extrato) : null)</td>
                <td class="col-sm-2">@Html.DisplayFor(modelItem => item.AdtNum)</td>
                <td class="col-sm-3">@Html.DisplayFor(modelItem => item.AdtDesc)</td>
                <td>@item.AdtData?.ToString("dd/MM/yyyy")</td>
                <td class="col-sm-2">@Html.DisplayFor(modelItem => item.AdtValor)</td>
                <td class="col-sm-1">
                    <div class="btn-group" role="group" aria-label="Operações">
                        <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.AdtId" title="Ver Detalhes"><i class="fa-regular fa-eye"></i></a>
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.AdtId" title="Editar"><i class="fas fa-pen-square"></i></a>
                        <button class="btn btn-danger delete-button" data-id="@item.AdtId" data-url="/Aditivos/Delete" title="Excluir"><i class="fas fa-trash"></i></button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title font-weight-bold" id="deleteModalLabel">Excluir Aditivo</h4>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/deleteModal.js"></script>
}
