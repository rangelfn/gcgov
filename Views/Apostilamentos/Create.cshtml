@model GCGov.Models.Apostilamento

@{
    ViewData["Title"] = "Adicionar Apostilamento";
}

<div class="row justify-content-center">
    <h1>Adicionar</h1>
    <h4>Apostilamento</h4>
    <hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-md-12">
                    <label asp-for="ContratoId" class="control-label"></label>
                    <select asp-for="ContratoId" class="form-control" asp-items="ViewBag.ContratoId"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <label asp-for="AptNum" class="control-label"></label>
                    <input asp-for="AptNum" class="form-control" />
                    <span asp-validation-for="AptNum" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="AptData" class="control-label"></label>
                    <input asp-for="AptData" class="form-control" />
                    <span asp-validation-for="AptData" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <label asp-for="AptDesc" class="control-label"></label>
                    <input asp-for="AptDesc" class="form-control" />
                    <span asp-validation-for="AptDesc" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>



<div class="row">
        <div class="col-md-12">
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-labeled btn-secondary" title="Voltar">
                    <span class="btn-label"><i class="fa-solid fa-arrow-left"></i></span>Voltar
                </a>
                <button type="submit" formaction="@Url.Action("Index")" class="btn btn-labeled btn-success" title="Salvar">
                    <span class="btn-label"><i class="fa-solid fa-check"></i></span>Salvar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
