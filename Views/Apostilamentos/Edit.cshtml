@model GCGov.Models.Apostilamento

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Apostilamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AptId" />
            <div class="form-group">
                <label asp-for="AptNum" class="control-label"></label>
                <input asp-for="AptNum" class="form-control" />
                <span asp-validation-for="AptNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AptDesc" class="control-label"></label>
                <input asp-for="AptDesc" class="form-control" />
                <span asp-validation-for="AptDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AptData" class="control-label"></label>
                <input asp-for="AptData" class="form-control" />
                <span asp-validation-for="AptData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AptValor" class="control-label"></label>
                <input asp-for="AptValor" class="form-control" />
                <span asp-validation-for="AptValor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContratoId" class="control-label"></label>
                <select asp-for="ContratoId" class="form-control" asp-items="ViewBag.ContratoId"></select>
                <span asp-validation-for="ContratoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-labeled btn-secondary" title="Voltar">
        <span class="btn-label"><i class="fa-solid fa-arrow-left"></i></span>Voltar
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
