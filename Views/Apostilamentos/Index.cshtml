@model IEnumerable<GCGov.Models.Apostilamento>

@{
    ViewData["Title"] = "Index";
}

<h4>Lista de Apostilamentos</h4>
<p>
    <a asp-action="Create" class="btn btn-labeled btn-primary" title="Cadastrar">
        <span class="btn-label"><i class="fa-regular fa-square-plus"></i></span>Cadastrar
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AptNum)</th>
            <th>@Html.DisplayNameFor(model => model.AptDesc)</th>
            <th>@Html.DisplayNameFor(model => model.AptData)</th>
            <th>@Html.DisplayNameFor(model => model.AptValor)</th>
            <th>@Html.DisplayNameFor(model => model.Contrato)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.AptNum)</td>
            <td>@Html.DisplayFor(modelItem => item.AptDesc)</td>
            <td>@Html.DisplayFor(modelItem => item.AptData)</td>
            <td>@Html.DisplayFor(modelItem => item.AptValor)</td>
            <td>@(item.Contrato != null ? Html.DisplayFor(modelItem => item.Contrato.Extrato) : null)</td>
            <td>
                <div class="btn-group" role="group" aria-label="Operações">
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.AptId" title="Ver Detalhes"><i class="fa-regular fa-eye"></i></a>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.AptId" title="Editar"><i class="fas fa-pen-square"></i></a>
                    <button class="btn btn-danger delete-button" data-id="@item.AptId" data-url="/Apostilamentos/Delete" title="Deletar"><i class="fas fa-trash"></i></button>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title font-weight-bold" id="deleteModalLabel">Excluir Aditivo</h4>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/deleteModal.js"></script>
}
