@model IEnumerable<gcgov.Models.Apostilamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AptNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AptDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AptData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AptNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AptDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AptData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contrato.ContratoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AptId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AptId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AptId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
