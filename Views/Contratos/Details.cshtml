                        <dd class="col-sm-6">@Html.DisplayFor(model => model.Modalidade.ModNome)</dd>
            </div>
            <div class="col-md-6">
                <dt class="col-sm-6">@Html.DisplayNameFor(model => model.UgCodigo)</dt>
                <dd class="col-sm-6">@Html.DisplayFor(model => model.UgCodigo.UgNome)</dd>
