            </div>
            <hr />
        </div>
    </div>
        <div>
            <a asp-action="Edit" class="btn btn-labeled btn-primary" asp-route-id="@Model?.ContratoId" title="Editar">
                <span class="btn-label"><i class="fas fa-pen-square"></i></span>Editar</a>
            <a asp-action="Index" class="btn btn-labeled btn-secondary" title="Voltar">
                <span class="btn-label"><i class="fa-solid fa-arrow-left"></i></span>Voltar
            </a>
        </div>
    </div>
</div>


