                <dd class="col-sm-6">@Html.DisplayFor(model => model.Contratante)</dd>
            </div>
            <div class="col-md-6">
                <dt class="col-sm-6">@Html.DisplayNameFor(model => model.Contratada)</dt>
                <dd class="col-sm-6">@Html.DisplayFor(model => model.Contratada)</dd>
            </div>
            <div class="col-md-12">
                <dt class="col-sm-12">@Html.DisplayNameFor(model => model.Objeto)</dt>
                <dd class="col-sm-12">@Html.DisplayFor(model => model.Objeto)</dd>
            </div>
            <div class="col-md-6">
                <dt class="col-sm-6">@Html.DisplayNameFor(model => model.Vigencia)</dt>
                <dd class="col-sm-6">@Html.DisplayFor(model => model.Vigencia)</dd>
            </div>
            <div class="col-md-6">
