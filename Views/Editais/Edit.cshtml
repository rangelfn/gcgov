@model GCGov.Models.Edital

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center">
    <h4>Editar Edital</h4>
    <hr />

    <div class="row">
        <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EdtId" />
            <div class="form-group row">
                <div class="col-md-12">
                    <label asp-for="ContratoId" class="control-label"></label>
                    <select asp-for="ContratoId" class="form-control" asp-items="ViewBag.ContratoId" disabled></select>
                    <span asp-validation-for="ContratoId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="EdtNum" class="control-label"></label>
                    <input asp-for="EdtNum" class="form-control" />
                    <span asp-validation-for="EdtNum" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="EdtTipo" class="control-label"></label>
                    <input asp-for="EdtTipo" class="form-control" />
                    <span asp-validation-for="EdtTipo" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="EdtLink" class="control-label"></label>
                    <input asp-for="EdtLink" class="form-control" />
                    <span asp-validation-for="EdtLink" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="EdtData" class="control-label"></label>
                    <input asp-for="EdtData" class="form-control" type="date"/>
                    <span asp-validation-for="EdtData" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-labeled btn-secondary" title="Voltar">
                        <span class="btn-label"><i class="fa-solid fa-arrow-left"></i></span>Voltar
                    </a>
                    <button type="submit" class="btn btn-labeled btn-success" title="Salvar">
                        <span class="btn-label"><i class="fa-solid fa-check"></i></span>Salvar
                    </button>
                 </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
