@model IEnumerable<gcgov.Models.Edital>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
     <a asp-action="Create" class="btn btn-primary">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EdtNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EdtTipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EdtLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EdtData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EdtNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EdtTipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EdtLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EdtData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contrato.ContratoId)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.EdtId title="Editar"><i class="fas fa-pen-square mr-2"></i></a>
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.EdtId"title="Detalhar"><i class="fas fa-file-alt mr-2"></i></a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.EdtId"title="Apagar"><i class="fas fa-trash mr-2"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
