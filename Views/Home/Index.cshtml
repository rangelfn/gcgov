﻿﻿﻿@{
    ViewData["Title"] = "Gestor de Contratos";
}

<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card card-raised bg-success text-white shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col-auto">
                        <i class="fas fa-calendar fa-2x"></i>
                    </div><div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">
                            Valor Total Contratado
                        </div>
                        <div class="h5 mb-0 font-weight-bold">R$17.405.400,00</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card card-raised bg-info text-white shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col-auto">
                        <i class="fas fa-calendar fa-2x"></i>
                    </div><div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">
                            Valor Total Empenhado
                        </div>
                        <div class="h5 mb-0 font-weight-bold">R$17.405.400,00</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card card-raised bg-warning text-white shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col-auto">
                        <i class="fas fa-calendar fa-2x"></i>
                    </div><div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">
                            Valor Total a Pagar
                        </div>
                        <div class="h5 mb-0 font-weight-bold">R$10.000.000,00</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card card-raised bg-danger text-white shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col-auto">
                        <i class="fas fa-calendar fa-2x"></i>
                    </div><div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">
                            Valor Total Pago
                        </div>
                        <div class="h5 mb-0 font-weight-bold">R$7.405.400,00</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-8">
        <div class="card shadow mb-4 d-flex align-items-stretch">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold">Contratos por Mês</h6>
            </div>
            <div class="card-body align-items-stretch">
                <div>
                    <canvas id="bar"></canvas>
                </div>
                <script src="~/js/chartjs/chartjsBar.js" asp-append-version="true"></script>
            </div>
        </div>
    </div>

    <div class="col-xl-4">
        <div class="card shadow mb-4 d-flex">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold">Contratos Por Segmento</h6>
            </div>
            <div class="card-body align-items-stretch">
                <div>
                    <canvas id="doughnut"></canvas>
                </div>

                <script src="~/js/chartjs/chartjsDoughnut.js" asp-append-version="true"></script>
            </div>
        </div>
    </div>
</div>
