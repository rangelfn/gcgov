@model GCGov.Models.NaturezaDespesa

@{
    ViewData["Title"] = "Cadastrar Natureza de Despeza";
}

<div class="row justify-content-center">
    <div class="col-md-12">
        <h4>Cadastrar Natureza de Despeza</h4>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-md-12">
                <label asp-for="FonteRecurso" class="control-label"></label>
                <input asp-for="FonteRecurso" class="form-control" />
                <span asp-validation-for="FonteRecurso" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                <label asp-for="ProgramaTrabalho" class="control-label"></label>
                <input asp-for="ProgramaTrabalho" class="form-control" />
                <span asp-validation-for="ProgramaTrabalho" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                <label asp-for="ElementoDespesa" class="control-label"></label>
                <input asp-for="ElementoDespesa" class="form-control" />
                <span asp-validation-for="ElementoDespesa" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-labeled btn-secondary" title="Voltar">
                        <span class="btn-label"><i class="fa-solid fa-arrow-left"></i></span>Voltar
                    </a>
                    <button type="submit" class="btn btn-labeled btn-success" title="Salvar">
                        <span class="btn-label"><i class="fa-solid fa-check"></i></span>Salvar
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
