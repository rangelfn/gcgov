@model GCGov.Models.PgtosOrigem

@{
    ViewData["Title"] = "Editar Nota Empenho";
}

<div class="row justify-content-center">
    <h4>Editar Nota Empenho</h4>
    <hr />

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PgtoOrigemId" />
            <div class="form-group row">
                <div class="col-md-12">
                    <label asp-for="ContratoId" class="control-label"></label>
                        <select asp-for="ContratoId" class="form-control" asp-items="ViewBag.ContratoId"></select>
                    <span asp-validation-for="ContratoId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PgtoModId" class="control-label"></label>
                    <select asp-for="PgtoModId" class="form-control" asp-items="ViewBag.PgtoModID"></select>
                    <span asp-validation-for="PgtoModId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="NatDespId" class="control-label"></label>
                    <select asp-for="NatDespId" class="form-control" asp-items="ViewBag.NatDespId"></select>
                    <span asp-validation-for="NatDespId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="NotaEmpenho" class="control-label"></label>
                    <input asp-for="NotaEmpenho" class="form-control" />
                    <span asp-validation-for="NotaEmpenho" class="text-danger"></span>
                </div>
                 <div class="col-md-6">
                    <label asp-for="DataCadastro" class="control-label"></label>
                    <input asp-for="DataCadastro" class="form-control" type="date"/>
                    <span asp-validation-for="DataCadastro" class="text-danger"></span>
                </div>
                </div>
                <div class="col-md-12">
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-labeled btn-secondary" title="Voltar">
                            <span class="btn-label"><i class="fa-solid fa-arrow-left"></i></span>Voltar
                        </a>
                        <button type="submit" class="btn btn-labeled btn-success" title="Salvar">
                            <span class="btn-label"><i class="fa-solid fa-check"></i></span>Salvar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
