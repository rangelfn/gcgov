@model GCGov.Models.Portaria

@{
    ViewData["Title"] = "Excluir Portaria";
}

<div class="row justify-content-center">
    <h6 class="text-danger">ATENÇÃO! Esta ação não poderá ser desfeita, você tem certeza que deseja excluir esta Portaria?</h6>
    <hr />

            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                <dt class = "col-sm-12">@Html.DisplayNameFor(model => model.PortariaNumero)</dt>
                <dd class = "col-sm-12">@Html.DisplayFor(model => model.PortariaNumero)</dd>
                <dt class = "col-sm-12">@Html.DisplayNameFor(model => model.ProtocoloDiof)</dt>
                <dd class = "col-sm-12">@Html.DisplayFor(model => model.ProtocoloDiof)</dd>
                <dt class = "col-sm-12">@Html.DisplayNameFor(model => model.DataPublicacao)</dt>
                <dd class = "col-sm-12">@Html.DisplayFor(model => model.DataPublicacao)</dd>
                <dt class = "col-sm-12">@Html.DisplayNameFor(model => model.DataInicio)</dt>
                <dd class = "col-sm-12">@Html.DisplayFor(model => model.DataInicio)</dd>
                <dt class = "col-sm-12">@Html.DisplayNameFor(model => model.Contrato)</dt>
                <dd class = "col-sm-12">@Html.DisplayFor(model => model.Contrato.Extrato)</dd>
            </dl>

            <form asp-action="Delete">
                <div class="form-group row"></div>
                <div class="col-md-12">
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-labeled btn-secondary" title="Voltar">
                            <span class="btn-label"><i class="fa-solid fa-arrow-left"></i></span>Voltar
                        </a>
                        <button type="submit" class="btn btn-labeled btn-danger" title="Excluir">
                            <span class="btn-label"><i class="fa-solid fa-trash"></i></span>Excluir
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>