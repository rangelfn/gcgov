@model GCGov.Models.Servidor

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-12">
        <h4>Cadastrar Portaria</h4>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-md-12">
                    <label asp-for="Matricula" class="control-label"></label>
                    <input asp-for="Matricula" class="form-control" />
                    <span asp-validation-for="Matricula" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="UgCodigoId" class="control-label"></label>
                    <select asp-for="UgCodigoId" class ="form-control" asp-items="ViewBag.UgCodigoId"></select>
                </div>
                <div class="col-md-6">
                    <label asp-for="UgDpId" class="control-label"></label>
                    <select asp-for="UgDpId" class ="form-control" asp-items="ViewBag.UgDpId"></select>
                </div>
            </div>
            <div class="col-md-12">
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-labeled btn-secondary" title="Voltar">
                        <span class="btn-label"><i class="fa-solid fa-arrow-left"></i></span>Voltar
                    </a>
                    <button type="submit" class="btn btn-labeled btn-success" title="Salvar">
                        <span class="btn-label"><i class="fa-solid fa-check"></i></span>Salvar
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
