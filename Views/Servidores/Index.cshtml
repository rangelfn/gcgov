@model IEnumerable<GCGov.Models.Servidor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-action="Create" class="btn btn-labeled btn-primary" title="Cadastrar">
        <span class="btn-label"><i class="fa-regular fa-square-plus"></i></span>Cadastrar
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="col-sm-3">Nome</th>
            <th class="col-sm-3">Cpf</th>
            <th class="col-sm-3">UgCodigo)</th>
            <th>@Html.DisplayNameFor(model => model.UgDp)</th>
            <th class="col-sm-1"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Cpf)</td>
            <td>@Html.DisplayFor(modelItem => item.UgCodigo.UgCodigoId)</td>
            <td>@Html.DisplayFor(modelItem => item.UgDp.UgDpId)</td>
            <td class="col-sm-1">
                <div class="btn-group" role="group" aria-label="Operações">
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.Matricula" title="Ver Detalhes"><i class="fa-regular fa-eye"></i></a>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Matricula" title="Editar"><i class="fas fa-pen-square"></i></a>
                    <button class="btn btn-danger delete-button" data-id="@item.Matricula" data-url="/Portarias/Delete" title="Excluir"><i class="fas fa-trash"></i></button>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
