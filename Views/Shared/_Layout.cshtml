<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - gcgov</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/gcgov.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">gcgov</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                    <div id="navbarCollapse" class="collapse navbar-collapse justify-content-start">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Home")" class="nav-link active">Home</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("About", "Home")" class="nav-link">Privacidade</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Contratos</a>
                                <ul class="dropdown-menu">
                                    <li><a href="#" class="dropdown-item">Cadastrar</a></li>
                                    <li><a href="#" class="dropdown-item">Editar</a></li>
                                    <li><a href="#" class="dropdown-item">Deletar</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Adicionais</a>
                                <ul class="dropdown-menu">
                                    <li><a href="#" class="dropdown-item">Editais</a></li>
                                    <li><a href="#" class="dropdown-item">Aditivos</a></li>
                                    <li><a href="#" class="dropdown-item">Apostilamentos</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Pagamentos</a>
                                <ul class="dropdown-menu">
                                    <li><a href="#" class="dropdown-item">Cadastrar</a></li>
                                    <li><a href="#" class="dropdown-item">Editar</a></li>
                                    <li><a href="#" class="dropdown-item">Deletar</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Portarias</a>
                                <ul class="dropdown-menu">
                                    <li><a href="#" class="dropdown-item">Cadastrar</a></li>
                                    <li><a href="#" class="dropdown-item">Editar</a></li>
                                    <li><a href="#" class="dropdown-item">Deletar</a></li>
                                </ul>
                            </li>
                        </ul>
                        <form class="navbar-form form-inline">
                            <div class="input-group search-box">
                                <input type="text" id="search" class="form-control" placeholder="Pesquisar">
                                <span class="input-group-addon"><i class="fas fa-search"></i></span>
                            </div>
                        </form>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a href="#" class="nav-link notifications"><i class="far fa-bell"></i><span class="badge">1</span></a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link messages"><i class="far fa-envelope"></i><span class="badge">10</span></a>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle user-action" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="far fa-user"></i> Rangel Nepomuceno <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#" class="dropdown-item"><i class="far fa-user"></i> Perfil</a></li>
                                    <li><a href="#" class="dropdown-item"><i class="far fa-calendar-alt"></i> Calendario</a></li>
                                    <li><a href="#" class="dropdown-item"><i class="fas fa-sliders-h"></i> Configurações</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a href="#" class="dropdown-item"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - gcgov - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
